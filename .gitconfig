[core]
  excludesfile = ~/.gitglobalignore
[init]
  templatedir = ~/.git_template
[user]
  name = Jean-Baptiste Barth
  email = jeanbaptiste.barth@gmail.com
[branch]
  autosetuprebase = always #always "pull --rebase"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dff = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = stash
  root = rev-parse --show-toplevel
  up = pull --ff-only
  amend = commit --amend
[push]
  default = tracking
[github]
  user = jbbarth
