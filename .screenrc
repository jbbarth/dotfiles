# Bind F10 and F12 (NOT F2..) to previous and next screen window
bindkey -k k; prev
bindkey -k F2 next

startup_message off

# Window list at the bottom.
hardstatus alwayslastline
hardstatus string "%-w%{= BW}%50>%n %t%{-}%+w%<"

# Change default escape sequence
escape ^Wa

# Support for railscasts vim theme
# see: http://www.vim.org/scripts/script.php?script_id=2175
#attrcolor b ".I"
#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
#defbce "on"
#term screen-256color-bce

# Restore Terminal scrollbars
termcapinfo xterm ti@:te@
